Package: poplin
Title: LC/MS Metabolomics Data Processing Utilities
Version: 0.99.0
Authors@R: c(
    person(given = "Jaehyun",
           family = "Joo",
           role = c("aut", "cre"),
           email = "jaehyunjoo@outlook.com"),
    person(given = "Blanca",
           family = "Himes",
           role = c("aut"),
